@model List<TheLastBuildWeek.Models.T_Animali>

@{
    ViewBag.Title = "AnimaliRicoverati";
}


<h2 class="text-light">Animali Ricoverati</h2>

<div>
    <h5 class="text-success">Seleziona una o più categorie a scelta:</h5>


    <div class="mt-5">

        <div class=" w-25 d-flex flex-row">

            
            <div class="d-flex flex-row px-3">
                <button id="mostraCani" class="bg-primary bg-opacity-25 text-light border border-light rounded-pill px-3" >Cani</button>
            </div>

            <div class="d-flex flex-row px-3">
                <button id="mostraGatti" class="bg-primary bg-opacity-25 text-light border border-light rounded-pill px-3">Gatti</button>
            </div>

            <div class="d-flex flex-row px-3">
                <button id="mostraVolatili" class="bg-primary bg-opacity-25 text-light border border-light rounded-pill px-3">Volatili</button>
            </div>

            <div class="d-flex flex-row px-3">
                <button id="mostraRettili" class="bg-primary bg-opacity-25 text-light border border-light rounded-pill px-3">Rettili</button>
            </div>

            <div class="d-flex flex-row px-3">
                <button id="mostraRoditori" class="bg-primary bg-opacity-25 text-light border border-light rounded-pill px-3">Roditori</button>
            </div>
        </div>
        
        <div id="caniPartial" style="display:none">
            
        </div>

        <div id="gattiPartial" style="display:none">

        </div>

        <div id="volatiliPartial" style="display:none">

        </div>

        <div id="rettiliPartial" style="display:none">

        </div>

        <div id="roditoriPartial" style="display:none">

        </div>

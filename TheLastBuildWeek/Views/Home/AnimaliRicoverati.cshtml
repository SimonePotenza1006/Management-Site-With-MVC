@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
        $(document).ready(function () {
            $("#mostraCani").click(function () {
                $("#caniPartial").slideToggle();
                $("#caniPartial").load("CaniRicoverati", "Home");
            })

            $("#mostraGatti").click(function () {
                $("#gattiPartial").slideToggle();
                $("#gattiPartial").load("GattiRicoverati", "Home");
            })

            $("#mostraVolatili").click(function () {
                $("#volatiliPartial").slideToggle();
                $("#volatiliPartial").load("VolatiliRicoverati", "Home");
            })

            $("#mostraRettili").click(function () {
                $("#rettiliPartial").slideToggle();
                $("#rettiliPartial").load("RettiliRicoverati", "Home");
            })

            $("#mostraRoditori").click(function () {
                $("#roditoriPartial").slideToggle();
                $("#roditoriPartial").load("RoditoriRicoverati", "Home");
            })
        })
</script>
}